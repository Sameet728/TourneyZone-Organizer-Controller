<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || "Page Not Found" %> | SVx Arena</title>

  <script src="https://cdn.tailwindcss.com"></script>
  
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
          },
          colors: {
            brand: {
              50: '#f5f3ff',
              100: '#ede9fe',
              500: '#8b5cf6',
              600: '#7c3aed',
              900: '#4c1d95',
            }
          },
          animation: {
            'float': 'float 6s ease-in-out infinite',
            'spin-slow': 'spin 12s linear infinite',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-20px)' },
            }
          }
        }
      }
    }
  </script>

  <style>
    /* Parallax Elements */
    .parallax { transition: transform 0.1s ease-out; }

    /* Glitch Text Effect */
    .glitch {
      position: relative;
      color: #7c3aed;
      font-weight: 900;
      font-size: 8rem;
      letter-spacing: -5px;
      line-height: 1;
    }
    .glitch::before, .glitch::after {
      content: attr(data-text);
      position: absolute;
      top: 0; left: 0; width: 100%; height: 100%;
    }
    .glitch::before {
      left: 2px;
      text-shadow: -1px 0 #ff00c1;
      clip: rect(44px, 450px, 56px, 0);
      animation: glitch-anim-1 5s infinite linear alternate-reverse;
    }
    .glitch::after {
      left: -2px;
      text-shadow: -1px 0 #00fff9;
      clip: rect(44px, 450px, 56px, 0);
      animation: glitch-anim-2 5s infinite linear alternate-reverse;
    }
    @keyframes glitch-anim-1 {
      0% { clip: rect(30px, 9999px, 10px, 0); }
      20% { clip: rect(20px, 9999px, 80px, 0); }
      40% { clip: rect(60px, 9999px, 40px, 0); }
      60% { clip: rect(10px, 9999px, 20px, 0); }
      80% { clip: rect(50px, 9999px, 60px, 0); }
      100% { clip: rect(70px, 9999px, 30px, 0); }
    }
    @keyframes glitch-anim-2 {
      0% { clip: rect(60px, 9999px, 70px, 0); }
      20% { clip: rect(10px, 9999px, 30px, 0); }
      40% { clip: rect(80px, 9999px, 10px, 0); }
      60% { clip: rect(30px, 9999px, 50px, 0); }
      80% { clip: rect(40px, 9999px, 20px, 0); }
      100% { clip: rect(20px, 9999px, 60px, 0); }
    }

    /* Mobile Text Size Adjustment */
    @media (max-width: 640px) {
      .glitch { font-size: 6rem; }
    }
  </style>
</head>

<body class="bg-slate-50 text-slate-800 font-sans min-h-screen flex flex-col relative overflow-hidden" onmousemove="parallax(event)">

  <div class="fixed inset-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div data-speed="2" class="parallax absolute top-0 left-1/4 w-[600px] h-[600px] bg-brand-200 rounded-full mix-blend-multiply filter blur-[80px] opacity-40 animate-blob"></div>
    <div data-speed="-2" class="parallax absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-purple-200 rounded-full mix-blend-multiply filter blur-[80px] opacity-40 animate-blob animation-delay-2000"></div>
    <div data-speed="1" class="parallax absolute top-1/2 left-1/2 w-[400px] h-[400px] bg-pink-100 rounded-full mix-blend-multiply filter blur-[80px] opacity-40 animate-blob animation-delay-4000"></div>
  </div>

  <div class="container mx-auto px-4 flex-grow flex flex-col items-center justify-center relative z-10 text-center">
    
    <div class="absolute top-20 left-10 md:left-40 text-4xl animate-float opacity-50">üéÆ</div>
    <div class="absolute bottom-20 right-10 md:right-40 text-4xl animate-float opacity-50" style="animation-delay: 1.5s;">üëæ</div>
    <div class="absolute top-40 right-20 text-4xl animate-bounce opacity-30">üîå</div>

    <div class="relative">
      <h1 class="glitch mb-2" data-text="404">404</h1>
      
      <div class="text-6xl md:text-8xl mb-6 animate-float relative z-10">
        üë®‚ÄçüöÄ <span class="text-4xl absolute top-0 -right-4 animate-ping">?</span>
      </div>

      <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900 tracking-tight mb-4">
        <%= title || "Mission Failed!" %>
      </h2>
      
      <p class="text-slate-500 text-lg md:text-xl max-w-lg mx-auto mb-10 leading-relaxed">
        <%= message || "We lost connection to this part of the arena. The map you're looking for doesn't exist or has been moved." %>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="group relative px-8 py-4 bg-brand-600 text-white font-bold rounded-2xl shadow-xl hover:bg-brand-700 hover:shadow-brand-500/40 hover:-translate-y-1 transition-all duration-300">
          <span class="flex items-center gap-2">
            <i class="fas fa-home"></i> Return to Base
          </span>
          <div class="absolute inset-0 h-full w-full rounded-2xl scale-0 transition-all duration-300 group-hover:scale-100 group-hover:bg-white/10"></div>
        </a>

        <a href="javascript:history.back()" class="px-8 py-4 bg-white text-slate-600 border-2 border-slate-200 font-bold rounded-2xl hover:border-brand-300 hover:text-brand-600 transition-all duration-300 hover:-translate-y-1">
          <i class="fas fa-undo mr-2"></i> Go Back
        </a>
      </div>
    </div>

  </div>

  <div class="w-full text-center py-6 text-slate-400 text-sm font-medium">
    <p>&copy; SVx Arena. System Error.</p>
  </div>

  <script>
    function parallax(e) {
      this.querySelectorAll('.parallax').forEach(layer => {
        const speed = layer.getAttribute('data-speed');
        const x = (window.innerWidth - e.pageX * speed) / 100;
        const y = (window.innerHeight - e.pageY * speed) / 100;
        layer.style.transform = `translateX(${x}px) translateY(${y}px)`;
      });
    }
  </script>

</body>
</html>