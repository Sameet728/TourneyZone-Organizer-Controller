<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bulk Deposit Result</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>


<%- include("../includes/navbar") %>
<h2>ğŸ§¾ Bulk Deposit Logs</h2>
<% if (logs.length === 0) { %>
  <p>No deposit logs found.</p>
<% } else { %>
  <% logs.forEach(log => { %>
    <div class="card mb-4 p-3">
      <h5>ğŸ•’ <%= log.createdAt.toLocaleString() %></h5>
      <p>âœ… Processed: <%= log.processed %>, âŒ Failed: <%= log.failed %></p>
      <table class="table table-sm table-bordered mt-2">
        <thead>
          <tr>
            <th>UTR</th>
            <th>Status</th>
            <th>Amount</th>
            <th>User</th>
            <th>Message</th>
          </tr>
        </thead>
        <tbody>
          <% log.results.forEach(txn => { %>
            <tr>
              <td><%= txn.utr %></td>
              <td><%= txn.status %></td>
              <td><%= txn.amount || "-" %></td>
              <td><%= txn.username || "-" %></td>
              <td><%= txn.message || "-" %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% }) %>
<% } %>


<%- include("../includes/footer") %>
</body>
</html>
