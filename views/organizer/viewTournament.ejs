<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= tournament.name %> | SVx Dashboard</title>

  <script src="https://cdn.tailwindcss.com"></script>
  
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
          },
          colors: {
            brand: {
              50: '#f5f3ff',
              100: '#ede9fe',
              500: '#8b5cf6',
              600: '#7c3aed',
              900: '#4c1d95',
            }
          },
          animation: {
            'float': 'float 3s ease-in-out infinite',
            'bounce-slight': 'bounce-slight 2s infinite',
            'slide-up': 'slide-up 0.4s cubic-bezier(0.16, 1, 0.3, 1)',
            'pop-in': 'pop-in 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275)',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-5px)' },
            },
            'bounce-slight': {
                '0%, 100%': { transform: 'translateY(0)' },
                '50%': { transform: 'translateY(-3px)' },
            },
            'slide-up': {
                '0%': { transform: 'translateY(20px)', opacity: '0' },
                '100%': { transform: 'translateY(0)', opacity: '1' },
            },
            'pop-in': {
                '0%': { transform: 'scale(0.9)', opacity: '0' },
                '100%': { transform: 'scale(1)', opacity: '1' },
            }
          }
        }
      }
    }

    // --- BUTTON LOGIC ---
    function handleApproveSubmit(form) {
      const btn = form.querySelector('button');
      if (!btn) return true;
      btn.disabled = true;
      btn.classList.add('opacity-70', 'cursor-not-allowed', 'pointer-events-none');
      btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i>';
      return true;
    }
  </script>

  <style>
    /* Custom Scrollbar */
    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: #f1f5f9; }
    ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }

    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob { animation: blob 7s infinite; }
    .animation-delay-2000 { animation-delay: 2s; }
  </style>
</head>

<body class="bg-slate-50 text-slate-800 font-sans min-h-screen flex flex-col relative overflow-x-hidden">

  <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-brand-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-purple-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
  </div>

  <div class="relative z-50">
    <%- include("../includes/navbar") %>
  </div>

  <div class="container mx-auto px-4 py-8 lg:py-12 flex-grow space-y-8">

    <%
      const parseTime = (timeStr) => {
        if (!timeStr) return null;
        const cleanStr = timeStr.replace(/\./g, '').trim().toUpperCase();
        const [time, modifier] = cleanStr.split(' ');
        let [hours, minutes] = time.split(':');
        hours = parseInt(hours, 10);
        minutes = parseInt(minutes, 10);
        if (hours === 12 && modifier === 'AM') hours = 0;
        if (hours < 12 && modifier === 'PM') hours += 12;
        return { h: hours, m: minutes };
      };

      // 1. Time Logic
      const deadline = new Date(tournament.tournamentDate);
      if (tournament.registrationCloseTime) {
         const t = parseTime(tournament.registrationCloseTime);
         if(t) deadline.setHours(t.h, t.m, 0, 0);
      } else {
         deadline.setHours(23, 59, 59, 999);
      }

      const now = new Date();
    %>

    <div class="bg-white/90 backdrop-blur-xl border border-white/60 rounded-3xl p-6 md:p-8 shadow-xl relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-brand-400 via-purple-500 to-indigo-500"></div>

      <div class="flex flex-col lg:flex-row justify-between gap-8 mb-8 relative z-10">
        
        <div class="flex-grow">
          <div class="flex items-center gap-3 mb-3">
            <span class="inline-flex items-center gap-1.5 bg-slate-100 text-slate-600 text-[11px] font-bold px-3 py-1 rounded-full uppercase tracking-wider border border-slate-200">
              <i class="fas fa-gamepad text-brand-500"></i> <%= tournament.game %>
            </span>
            <span class="inline-flex items-center gap-1.5 text-[11px] font-bold px-3 py-1 rounded-full uppercase tracking-wider border
              <%= tournament.status === 'completed' ? 'bg-slate-100 text-slate-500 border-slate-200' : 'bg-green-50 text-green-700 border-green-200' %>">
              <span class="w-1.5 h-1.5 rounded-full <%= tournament.status === 'completed' ? 'bg-slate-400' : 'bg-green-500 animate-pulse' %>"></span>
              <%= tournament.status %>
            </span>
          </div>
          
          <div class="flex flex-col sm:flex-row sm:items-center gap-4">
            <h1 class="text-3xl md:text-5xl font-extrabold text-slate-900 tracking-tight leading-tight">
              <%= tournament.name %>
              <span class="inline-block text-2xl ml-2 animate-float">ðŸŽ®</span>
            </h1>
            
            <div class="flex gap-2">
              <button onclick="shareTournament('<%= tournament._id %>', '<%= tournament.name %>')" 
                      class="group inline-flex items-center gap-2 px-4 py-2 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-600 hover:text-brand-600 hover:border-brand-200 hover:shadow-lg transition-all active:scale-95 w-fit">
                <span class="text-lg group-hover:rotate-12 transition-transform">ðŸš€</span>
                <span>Share Link</span>
              </button>

              <% if (tournament.status === 'ongoing') { %>
                <% if (now >= deadline) { %>
                  <a href="/organizer/tournaments/<%= tournament._id %>/results" 
                     class="group inline-flex items-center gap-2 px-4 py-2 bg-yellow-500 text-slate-900 rounded-xl text-sm font-bold hover:bg-yellow-400 shadow-lg shadow-yellow-500/20 transition-all active:scale-95">
                    <i class="fas fa-flag-checkered group-hover:scale-110 transition-transform"></i>
                    <span>Finish & Add Results</span>
                  </a>
                <% } else { %>
                  <button disabled 
                          class="group inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-400 rounded-xl text-sm font-bold cursor-not-allowed border border-slate-200" 
                          title="Wait for registration to close">
                    <i class="fas fa-clock"></i>
                    <span>Reg Still Open</span>
                  </button>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 w-full lg:w-auto">
          <div class="bg-brand-50 border border-brand-100 p-4 rounded-2xl text-center min-w-[110px] hover:shadow-md transition-all">
            <p class="text-[10px] font-bold text-brand-400 uppercase tracking-widest mb-1">Entry</p>
            <p class="text-xl font-extrabold text-brand-900">â‚¹<%= tournament.entryFee %></p>
          </div>
          <div class="bg-brand-50 border border-brand-100 p-4 rounded-2xl text-center min-w-[110px] hover:shadow-md transition-all">
            <p class="text-[10px] font-bold text-brand-400 uppercase tracking-widest mb-1">Prize</p>
            <p class="text-xl font-extrabold text-brand-900">â‚¹<%= tournament.prizePool || 0 %></p>
          </div>
          <div class="bg-brand-50 border border-brand-100 p-4 rounded-2xl text-center min-w-[110px] hover:shadow-md transition-all">
            <p class="text-[10px] font-bold text-brand-400 uppercase tracking-widest mb-1">Filled</p>
            <p class="text-xl font-extrabold text-brand-900"><%= tournament.acceptedCount %><span class="text-xs text-brand-400 ml-0.5">/<%= tournament.teamLimit %></span></p>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm pt-6 border-t border-slate-100">
        <div class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors">
          <div class="w-10 h-10 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-brand-500 shadow-sm">
            <i class="far fa-calendar-alt"></i>
          </div>
          <div>
            <p class="text-[10px] font-bold text-slate-400 uppercase">Tournament Date</p>
            <p class="font-bold text-slate-900"><%= new Date(tournament.tournamentDate).toDateString() %></p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors">
          <div class="w-10 h-10 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-brand-500 shadow-sm">
            <i class="far fa-clock"></i>
          </div>
          <div>
            <p class="text-[10px] font-bold text-slate-400 uppercase">Start Time</p>
            <p class="font-bold text-slate-900"><%= tournament.matchTime || "TBA" %></p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors">
          <div class="w-10 h-10 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-red-500 shadow-sm">
            <i class="fas fa-stopwatch"></i>
          </div>
          <div>
            <p class="text-[10px] font-bold text-slate-400 uppercase">Reg Deadline</p>
            <p class="font-bold text-slate-900"><%= tournament.registrationCloseTime || "Open" %></p>
          </div>
        </div>
      </div>

      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/60 shadow-lg overflow-hidden mt-6" x-data="{ expanded: false }">
        <button @click="expanded = !expanded" class="w-full p-5 text-left flex items-center justify-between hover:bg-slate-50/50 transition-colors">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-brand-100 text-brand-600 flex items-center justify-center">
              <i class="fas fa-scroll"></i>
            </div>
            <div>
              <h4 class="text-base font-bold text-slate-900 uppercase tracking-widest">Tournament Details</h4>
              <p class="text-xs text-slate-500 mt-0.5">Rules, format, and additional information</p>
            </div>
          </div>
          <div class="text-slate-400 transition-transform duration-300" :class="{ 'rotate-180': expanded }">
            <i class="fas fa-chevron-down"></i>
          </div>
        </button>
        
        <div x-show="expanded" x-collapse class="px-5 pb-5">
          <div class="pt-4 border-t border-slate-100">
            <div class="bg-slate-50 rounded-lg p-4">
              <p class="text-slate-700 leading-relaxed text-sm md:text-base whitespace-pre-line">
                <%= tournament.description || "No specific rules or description provided for this event." %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <script src="//unpkg.com/alpinejs" defer></script>
    </div>

    <% if (tournament.acceptedCount > 0 && tournament.status !== "completed") { %>
      <div class="bg-white rounded-3xl shadow-sm border border-slate-200 p-6 md:p-8">
        
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-12 bg-indigo-50 text-brand-600 rounded-2xl flex items-center justify-center text-xl shadow-inner">
            <i class="fas fa-key"></i>
          </div>
          <div>
            <h2 class="text-xl font-bold text-slate-900">Room Credentials</h2>
            <p class="text-sm text-slate-500">Manage ID and Password sent to players</p>
          </div>
        </div>

        <% if (tournament.roomDetails && tournament.roomDetails.roomId) { %>
          <div class="bg-emerald-50 border border-emerald-100 rounded-xl p-4 mb-8 flex items-start gap-3 shadow-sm animate-fade-in-down">
            <div class="mt-0.5 text-white bg-emerald-500 rounded-full w-5 h-5 flex items-center justify-center text-[10px] shadow-sm">
              <i class="fas fa-check"></i>
            </div>
            <div>
              <p class="text-sm font-bold text-emerald-900">Credentials Shared Successfully</p>
              <p class="text-xs text-emerald-600 mt-0.5 font-medium">
                Last sent: <%= new Date(tournament.roomDetails.sharedAt).toLocaleString() %>
              </p>
            </div>
          </div>
        <% } %>

        <form action="/organizer/tournaments/<%= tournament._id %>/room" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mb-6">
            
            <div class="space-y-1.5">
              <label class="text-[11px] font-bold text-slate-400 uppercase tracking-wider ml-1">Room ID</label>
              <input type="text" name="roomId" required
                value="<%= tournament.roomDetails?.roomId || '' %>"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10 outline-none transition-all font-mono font-bold text-slate-700 placeholder-slate-300">
            </div>

            <div class="space-y-1.5">
              <label class="text-[11px] font-bold text-slate-400 uppercase tracking-wider ml-1">Password</label>
              <input type="text" name="roomPassword" required
                value="<%= tournament.roomDetails?.roomPassword || '' %>"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10 outline-none transition-all font-mono font-bold text-slate-700 placeholder-slate-300">
            </div>

            <div class="space-y-1.5">
              <label class="text-[11px] font-bold text-slate-400 uppercase tracking-wider ml-1">Match Time</label>
              <input type="text" name="matchTime"
                value="<%= tournament.matchTime || '' %>"
                placeholder="e.g 7:30 PM"
                class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10 outline-none transition-all font-medium text-slate-700 placeholder-slate-300">
            </div>

          </div>

          <button type="submit" class="inline-flex items-center justify-center px-6 py-3.5 bg-brand-600 hover:bg-brand-700 text-white font-bold rounded-xl shadow-lg shadow-brand-500/30 transition-all transform hover:-translate-y-0.5 active:scale-95">
            <i class="fas fa-paper-plane mr-2 animate-pulse"></i>
            <%= tournament.roomDetails?.roomId ? "Update & Re-Send" : "Send Credentials" %>
          </button>
        </form>
      </div>
    <% } %>

    <% if (tournament.status === "completed") { %>
      <div class="relative bg-slate-900 rounded-3xl p-8 shadow-2xl overflow-hidden border border-slate-800">
        <div class="absolute -top-24 -right-24 w-64 h-64 bg-yellow-500/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute -bottom-24 -left-24 w-64 h-64 bg-brand-500/20 rounded-full blur-3xl"></div>

        <div class="flex flex-col sm:flex-row justify-between items-center mb-8 relative z-10 gap-4">
          <h2 class="text-2xl font-bold text-white flex items-center">
            <i class="fas fa-trophy text-yellow-400 mr-3 drop-shadow-md"></i> Final Standings
          </h2>
          <% if (!tournament.result?.firstPlace) { %>
            <a href="/organizer/tournaments/<%= tournament._id %>/results" class="px-5 py-2.5 bg-yellow-500 text-slate-900 font-bold rounded-xl hover:bg-yellow-400 shadow-lg shadow-yellow-500/20 transition-all">
              <i class="fas fa-plus mr-1"></i> Add Results
            </a>
          <% } %>
        </div>

        <% if (tournament.result?.firstPlace) { %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 relative z-10 items-end">
            <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center order-2 md:order-1 hover:bg-white/10 transition-colors">
              <div class="text-4xl mb-2 grayscale opacity-80">ðŸ¥ˆ</div>
              <div class="text-slate-300 font-bold text-xs uppercase tracking-widest mb-1">Runner Up</div>
              <div class="text-lg font-bold text-white"><%= tournament.result.secondPlace?.teamName || "-" %></div>
              <div class="text-xs text-slate-400 mt-1"><%= tournament.result.secondPlace?.leader || "-" %></div>
            </div>

            <div class="bg-gradient-to-b from-yellow-500/20 to-transparent border border-yellow-500/40 rounded-2xl p-8 text-center order-1 md:order-2 transform md:-translate-y-4 shadow-[0_0_30px_rgba(234,179,8,0.1)]">
              <div class="text-5xl mb-3 animate-float">ðŸ¥‡</div>
              <div class="text-yellow-400 font-bold text-xs uppercase tracking-widest mb-1">Champion</div>
              <div class="text-2xl font-extrabold text-white mb-1"><%= tournament.result.firstPlace.teamName %></div>
              <div class="text-sm text-yellow-200/80 bg-yellow-500/10 px-3 py-1 rounded-full inline-block">
                Leader: <%= tournament.result.firstPlace.leader %>
              </div>
            </div>

            <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center order-3 md:order-3 hover:bg-white/10 transition-colors">
              <div class="text-4xl mb-2 sepia opacity-80">ðŸ¥‰</div>
              <div class="text-orange-300 font-bold text-xs uppercase tracking-widest mb-1">Third Place</div>
              <div class="text-lg font-bold text-white"><%= tournament.result.thirdPlace?.teamName || "-" %></div>
              <div class="text-xs text-slate-400 mt-1"><%= tournament.result.thirdPlace?.leader || "-" %></div>
            </div>
          </div>
        <% } else { %>
          <div class="text-center py-10 relative z-10 border-2 border-dashed border-slate-700 rounded-2xl">
            <p class="text-slate-400 italic">Results have not been published yet.</p>
          </div>
        <% } %>
      </div>
    <% } %>

    <div class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="p-6 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
        <h2 class="text-lg font-bold text-slate-900 flex items-center gap-2">
          <i class="fas fa-users text-brand-500"></i> Registrations
        </h2>
        <span class="text-xs font-bold text-brand-600 bg-brand-50 px-3 py-1 rounded-full border border-brand-100">
          Total: <%= tournament.registrations.length %>
        </span>
      </div>

      <% if (tournament.registrations.length === 0) { %>
        <div class="p-20 text-center text-slate-400">
          <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl text-slate-300">
            <i class="far fa-folder-open"></i>
          </div>
          <p class="font-medium">No registrations received yet.</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm whitespace-nowrap">
            <thead class="bg-slate-50 text-slate-500 font-bold uppercase text-[11px] border-b border-slate-200 tracking-wider">
              <tr>
                <th class="px-6 py-4">Player Details</th>
                <th class="px-6 py-4">Payment</th>
                <th class="px-6 py-4">UTR Ref</th>
                <th class="px-6 py-4">Status</th>
                <th class="px-6 py-4 text-right">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% tournament.registrations.forEach(reg => { %>
                <tr class="hover:bg-brand-50/30 transition-colors group">
                  
                  <td class="px-6 py-4">
                    <div class="font-bold text-slate-900 text-base"><%= reg.teamName %></div>
                    <div class="text-xs text-slate-500 mt-0.5 flex items-center gap-1">
                      <i class="far fa-user text-[10px]"></i> <%= reg.user?.username || "Unknown" %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="font-mono font-bold text-slate-700 bg-slate-100 inline-block px-2 py-1 rounded-lg">
                      â‚¹<%= reg.amount %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="font-mono text-xs text-slate-600 border border-slate-200 bg-white px-2 py-1 rounded-md select-all">
                      <%= reg.transactionId %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide border
                      <%= reg.status === 'accepted' ? 'bg-green-50 text-green-700 border-green-200' : 
                          reg.status === 'rejected' ? 'bg-red-50 text-red-700 border-red-200' : 
                          'bg-amber-50 text-amber-700 border-amber-200' %>">
                      <span class="w-1.5 h-1.5 rounded-full mr-1.5 
                        <%= reg.status === 'accepted' ? 'bg-green-500' : 
                            reg.status === 'rejected' ? 'bg-red-500' : 
                            'bg-amber-500 animate-pulse' %>"></span>
                      <%= reg.status %>
                    </span>
                  </td>

                  <td class="px-6 py-4 text-right">
                    <% if (reg.status === "pending") { %>
                      <div class="flex items-center justify-end gap-2">
                        <form action="/organizer/tournaments/<%= tournament._id %>/registrations/<%= reg._id %>/approve" method="POST" onsubmit="return handleApproveSubmit(this)">
                          <button class="w-8 h-8 rounded-lg bg-green-100 text-green-600 hover:bg-green-500 hover:text-white transition-all flex items-center justify-center shadow-sm" title="Accept">
                            <i class="fas fa-check"></i>
                          </button>
                        </form>
                        <form action="/organizer/tournaments/<%= tournament._id %>/registrations/<%= reg._id %>/reject" method="POST">
                          <button class="w-8 h-8 rounded-lg bg-red-100 text-red-600 hover:bg-red-500 hover:text-white transition-all flex items-center justify-center shadow-sm" title="Reject">
                            <i class="fas fa-times"></i>
                          </button>
                        </form>
                      </div>
                    <% } else { %>
                      <span class="text-slate-300 text-2xl leading-none">&bull;</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>

    <% if (tournament.teams.length > 0) { %>
      <div class="bg-white rounded-3xl shadow-sm border border-slate-200 p-6">
        <h2 class="text-lg font-bold text-slate-900 mb-6 flex items-center gap-2">
          <i class="fas fa-shield-alt text-brand-500"></i> Confirmed Teams
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% tournament.teams.forEach((team, index) => { %>
            <div class="bg-slate-50 p-4 rounded-2xl border border-slate-200 hover:border-brand-300 hover:bg-white hover:shadow-md transition-all group">
              <div class="flex items-center justify-between mb-2">
                <div class="w-8 h-8 rounded-full bg-brand-100 text-brand-600 flex items-center justify-center text-xs font-bold font-mono border border-brand-200">
                  <%= index + 1 %>
                </div>
                <i class="fas fa-check-circle text-green-500 text-xs opacity-0 group-hover:opacity-100 transition-opacity"></i>
              </div>
              <div class="font-bold text-slate-800 truncate"><%= team.name %></div>
              <div class="text-[10px] uppercase font-bold text-slate-400 mt-1 flex items-center gap-1">
                <i class="fas fa-crown text-yellow-500"></i> <%= team.leader.username %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <div class="flex justify-between items-center pb-8 border-t border-slate-100 pt-6">
      
      <a href="/organizer/tournaments" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-brand-600 transition-colors group">
        <div class="w-8 h-8 rounded-full bg-white border border-slate-200 flex items-center justify-center mr-2 shadow-sm group-hover:-translate-x-1 transition-transform">
          <i class="fas fa-arrow-left"></i>
        </div>
        Back to Dashboard
      </a>

      <button onclick="document.getElementById('deleteModal').classList.remove('hidden')" 
              class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 text-red-600 rounded-xl font-bold text-sm hover:bg-red-100 transition-colors">
        <i class="fas fa-trash-alt"></i> Delete Tournament
      </button>

    </div>

  </div>

  <div id="deleteModal" class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-[100] hidden flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl shadow-2xl p-8 max-w-sm w-full animate-pop-in text-center relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-2 bg-red-500"></div>
      
      <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6 text-3xl">
        ðŸš¨
      </div>
      
      <h3 class="text-xl font-extrabold text-slate-900 mb-2">Are you sure?</h3>
      <p class="text-sm text-slate-500 mb-8 leading-relaxed">
        This action cannot be undone. This will permanently delete 
        <strong class="text-slate-800"><%= tournament.name %></strong> and all associated data.
      </p>

      <div class="flex flex-col gap-3">
        <form action="/organizer/tournaments/<%= tournament._id %>/delete" method="POST">
          <button type="submit" class="w-full py-3.5 bg-red-600 hover:bg-red-700 text-white font-bold rounded-xl transition-all shadow-lg shadow-red-500/30">
            Yes, Delete It
          </button>
        </form>
        <button onclick="document.getElementById('deleteModal').classList.add('hidden')" 
                class="w-full py-3.5 bg-white border border-slate-200 text-slate-700 font-bold rounded-xl hover:bg-slate-50 transition-all">
          Cancel
        </button>
      </div>
    </div>
  </div>

  <div class="mt-auto">
    <%- include("../includes/footer") %>
  </div>

  <script>
    function shareTournament(id, name) {
      const url = `${window.location.origin}/player/tournaments/${id}`;
      
      if (navigator.share) {
        navigator.share({
          title: `Join ${name}`,
          text: `Check out this tournament: ${name}`,
          url: url
        }).catch(console.error);
      } else {
        navigator.clipboard.writeText(url).then(() => {
          showToast();
        }).catch(err => {
          console.error('Failed to copy: ', err);
        });
      }
    }

    function showToast() {
      const toast = document.createElement('div');
      toast.className = 'fixed bottom-6 right-6 bg-slate-900 text-white px-6 py-3 rounded-2xl shadow-2xl z-[150] flex items-center gap-3 animate-slide-up';
      toast.innerHTML = '<span class="text-xl">ðŸ“‹</span> <span class="font-bold text-sm">Link Copied!</span>';
      
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateY(10px)';
        toast.style.transition = 'all 0.3s ease';
        setTimeout(() => toast.remove(), 300);
      }, 2500);
    }
  </script>

