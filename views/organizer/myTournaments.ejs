<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Tournaments | SVx Arena</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <script>
    tailwind.config = {
      theme: {
        extend: {
         fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
          },
          colors: {
            brand: {
              50: '#f5f3ff',
              100: '#ede9fe',
              500: '#8b5cf6',
              600: '#7c3aed',
              900: '#4c1d95',
            }
          }
        }
      }
    }
  </script>

  <style>
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: #f5f3ff; }
    ::-webkit-scrollbar-thumb { background: #c4b5fd; border-radius: 10px; }

    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob { animation: blob 7s infinite; }
    .animation-delay-2000 { animation-delay: 2s; }
    .animation-delay-4000 { animation-delay: 4s; }
  </style>
</head>

<body class="bg-slate-50 text-slate-800 font-sans min-h-screen flex flex-col relative overflow-x-hidden">

  <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-32 left-1/3 w-96 h-96 bg-pink-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative z-50">
    <%- include("../includes/navbar") %>
  </div>

  <div class="container mx-auto px-4 py-8 lg:py-12 flex-grow">

    <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-4">
      <div class="text-center md:text-left">
        <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900 tracking-tight">
          My Tournaments <span class="text-brand-500">‚ö°Ô∏è</span>
        </h2>
        <p class="text-slate-500 mt-2 font-medium">Manage and track your gaming events</p>
      </div>

      <a href="/organizer/tournaments/new"
         class="group inline-flex items-center justify-center px-8 py-3 font-bold text-white bg-brand-600 rounded-xl hover:bg-brand-900 shadow-lg shadow-brand-500/30 hover:-translate-y-1 transition-all w-full md:w-auto">
        <span class="mr-2 text-lg">üöÄ</span> Create New
      </a>
    </div>

    <% if (tournaments.length === 0) { %>
      <div class="bg-white/60 backdrop-blur-xl border border-white/50 rounded-3xl p-12 text-center shadow-xl max-w-2xl mx-auto">
        <div class="w-20 h-20 bg-brand-50 rounded-full flex items-center justify-center mx-auto mb-6 text-brand-600 text-4xl shadow-inner">
          <i class="fas fa-gamepad"></i>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 mb-2">No Tournaments Found</h3>
        <p class="text-slate-500 mb-8">
          The arena is empty. It's time to organize your first battle!
        </p>
        <a href="/organizer/tournaments/new"
           class="inline-flex items-center px-6 py-3 font-bold text-brand-600 bg-brand-50 border border-brand-100 rounded-xl hover:bg-brand-100 transition-colors">
          <i class="fas fa-plus mr-2"></i> Create First Tournament
        </a>
      </div>
    <% } else { %>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <% tournaments.forEach(t => { 
            /* --- SAFE CALCULATION LOGIC --- */
            let teamCount = 0;
            if (t.teams && Array.isArray(t.teams)) {
              teamCount = t.teams.length;
            }
            
            let limit = 0;
            if (t.teamLimit) {
              limit = parseInt(t.teamLimit);
            }
            
            let percentage = 0;
            if (limit > 0) {
              percentage = Math.round((teamCount / limit) * 100);
            }
            // Clamp percentage to max 100
            percentage = Math.min(percentage, 100);
            
            let spotsLeft = Math.max(0, limit - teamCount);
        %>
          <div class="group relative bg-white/90 backdrop-blur-sm rounded-2xl p-6 border border-slate-100 shadow-sm hover:shadow-xl hover:shadow-brand-500/10 hover:-translate-y-1 transition-all duration-300 flex flex-col h-full">

            <div class="flex justify-between items-start mb-4">
              <span class="inline-flex items-center gap-2 px-3 py-1 bg-slate-50 text-slate-600 rounded-lg text-xs font-bold uppercase tracking-wider">
                <i class="fas fa-gamepad"></i> <%= t.game %>
              </span>

              <span class="px-3 py-1 rounded-full text font-bold uppercase tracking-wider
                <%= t.status === 'upcoming' ? 'bg-amber-50 text-amber-600 border border-amber-100' : '' %>
                <%= t.status === 'ongoing' ? 'bg-green-50 text-green-600 border border-green-100' : '' %>
                <%= t.status === 'completed' ? 'bg-slate-100 text-slate-500 border border-slate-200' : '' %>
              ">
                üî• <%= t.status %>
              </span>
            </div>

            <h5 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-brand-600 transition-colors"><%= t.name %></h5>
            <p class="text-sm text-slate-500 mb-5 line-clamp-2 flex-grow">
              <%= t.description || "No description provided." %>
            </p>

            <div class="mb-5">
              <div class="flex justify-between items-end text-xs font-bold mb-1.5">
                <span class="text-slate-500 flex items-center">
                  <i class="fas fa-users mr-1.5 text-brand-400"></i>
                  <%= teamCount %> / <%= limit %> Teams
                </span>
                <span class="<%= spotsLeft === 0 ? 'text-red-500' : 'text-brand-600' %>">
                  <%= spotsLeft === 0 ? 'Full' : `${spotsLeft} Spots Left` %>
                </span>
              </div>
              
              <!-- FIXED PROGRESS BAR WITH SMOOTH ANIMATION -->
              <div class="w-full bg-slate-100 rounded-full h-2 overflow-hidden border border-slate-200">
                <div class="h-full rounded-full transition-all duration-500 ease-out bg-gradient-to-r from-brand-400 to-brand-600 absolute inset-0 opacity-0"
                     data-width="<%= percentage %>"
                     style="width: 0%;"></div>
              </div>
            </div>

            <div class="bg-brand-50/50 rounded-xl p-4 text-sm space-y-2.5 mb-6 border border-brand-50">
              <div class="flex items-center text-slate-600">
                <i class="far fa-calendar-alt text-brand-500 w-5"></i>
                <span class="font-medium"><%= new Date(t.tournamentDate).toDateString() %></span>
              </div>
              <div class="flex items-center text-slate-600">
                <i class="far fa-clock text-brand-500 w-5"></i>
                <span class="font-medium">Match: <%= t.matchTime || "TBA" %></span>
              </div>
              <div class="flex items-center text-slate-600">
                <i class="fas fa-trophy text-brand-500 w-5"></i>
                <span class="font-bold text-slate-800">Prize: ‚Çπ<%= t.prizePool || 0 %></span>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-3 mt-auto">
              <% if (t.status === 'completed') { %>
                <a href="/organizer/tournaments/<%= t._id %>/results"
                   class="text-center px-4 py-2.5 bg-emerald-500 text-white font-bold rounded-xl hover:bg-emerald-600 transition-colors shadow-lg shadow-emerald-200 flex items-center justify-center gap-2">
                  <i class="fas fa-trophy"></i> Results
                </a>
                <a href="/organizer/tournaments/<%= t._id %>"
                   class="text-center px-4 py-2.5 bg-white border border-slate-200 text-slate-700 font-bold rounded-xl hover:bg-slate-50 hover:text-brand-600 transition-colors">
                  <i class="fas fa-eye mr-2"></i> View
                </a>
              <% } else { %>
                <a href="/organizer/tournaments/<%= t._id %>/edit"
                   class="text-center px-4 py-2.5 bg-brand-600 text-white font-bold rounded-xl hover:bg-brand-700 transition-colors shadow-lg shadow-brand-200">
                  <i class="fas fa-edit mr-2"></i> Edit
                </a>
                <a href="/organizer/tournaments/<%= t._id %>"
                   class="text-center px-4 py-2.5 bg-white border border-slate-200 text-slate-700 font-bold rounded-xl hover:bg-slate-50 hover:text-brand-600 transition-colors">
                  <i class="fas fa-eye mr-2"></i> View
                </a>
              <% } %>
            </div>

          </div>
        <% }) %>
      </div>

    <% } %>

  </div>

  <div class="mt-12">
    <%- include("../includes/footer") %>
  </div>

  <!-- PROGRESS BAR ANIMATION SCRIPT -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Animate all progress bars
      document.querySelectorAll('[data-width]').forEach(bar => {
        const targetWidth = bar.getAttribute('data-width');
        bar.style.width = targetWidth + '%';
      });
    });
  </script>

</body>
</html>
