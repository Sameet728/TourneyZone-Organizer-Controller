<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Wallet</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Google Fonts for Gaming Vibe -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?&family=Oxanium:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <style>
    :root {
      --primary-glow: #9f5dff;
      --secondary-glow: #00e5ff;
      --success-glow: #28a745;
      --danger-glow: #dc3545;
      --dark-bg: #111119;
      --card-bg: #1c1c27;
      --border-color: rgba(255, 255, 255, 0.1);
    }

    body {
      font-family: 'Oxanium', sans-serif;
      background-color: var(--dark-bg);
      color: #f0f0f0;
    }

    .wallet-header {
      background: linear-gradient(135deg, var(--card-bg), #2a2a3a);
      border: 1px solid var(--border-color);
      border-radius: 1rem;
      padding: 2.5rem;
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .wallet-header h4 {
      color: #aab;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .wallet-header .balance {
        font-size: 4rem;
        font-weight: 700;
        color: var(--secondary-glow);
        text-shadow: 0 0 15px var(--secondary-glow);
    }
    
    .btn-action {
        text-decoration: none;
        background-color: var(--primary-glow);
        border: none;
        color: #fff;
        padding: 12px 30px;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 0 15px var(--primary-glow);
        margin: 0 10px;
    }
    
    .btn-deposit {
        background-color: var(--success-glow);
        box-shadow: 0 0 15px var(--success-glow);
    }
    
    .btn-withdraw {
        background-color: var(--primary-glow);
        box-shadow: 0 0 15px var(--primary-glow);
    }
    
    .btn-action:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }
    
    .action-buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 2rem;
    }
    
    .transactions-card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        overflow: hidden;
    }
    
    .table {
        margin-bottom: 0;
    }
    .table thead th {
        background-color: #2a2a3a;
        color: #aab;
        border-bottom: 2px solid var(--border-color);
        font-weight: 600;
    }
    
    .table tbody tr {
        transition: background-color 0.2s ease;
    }
    .table tbody tr:hover {
        background-color: #252532;
    }
    .table tbody td {
        border-top-color: var(--border-color);
        vertical-align: middle;
    }
    
    .txn-id-cell {
        font-family: 'Courier New', Courier, monospace;
        color: #aab;
    }
    
    .copy-btn {
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        padding: 0 0.5rem;
    }
    .copy-btn:hover {
        color: var(--primary-glow);
    }
    
    .empty-state {
        padding: 4rem;
        text-align: center;
    }
    
    .text-credit { color: var(--success-glow); font-weight: 600; }
    .text-debit { color: var(--danger-glow); font-weight: 600; }
    
  </style>
</head>

<body>
  <%- include("../includes/navbar") %>

  <div class="container my-5">

    <!-- Wallet Balance & Actions -->
    <div class="wallet-header">
      <h4>Current Balance</h4>
      <div class="balance">₹ <%= walletBalance.toLocaleString('en-IN') %></div>
      
      <div class="action-buttons">
        <a href="/wallet/deposit" class="btn-action btn-deposit">
          <i class="fas fa-plus-circle me-2"></i>Add Money
        </a>
        <a href="/organizer/wallet/withdraw" class="btn-action btn-withdraw">
          <i class="fas fa-paper-plane me-2"></i>Withdraw
        </a>
      </div>
    </div>

    <!-- Transaction History -->
    <h4 class="mb-3"><i class="fas fa-history me-2"></i>Transaction History</h4>
    <div class="transactions-card">
      <% if (transactions.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-receipt fs-1 mb-3 text-white-50"></i>
          <h5 class="text-light">No Transactions Yet</h5>
          <p class="text-white-50">Your credits and debits will appear here.</p>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Transaction ID</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Source</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(txn => { %>
                <tr>
                  <td><%= txn.date.toLocaleDateString() %></td>
                  <td class="txn-id-cell">
                    <code><%= txn.transactionId || "N/A" %></code>
                    <% if (txn.transactionId) { %>
                      <button class="copy-btn" onclick="copyToClipboard('<%= txn.transactionId %>')">
                          <i class="fas fa-copy"></i>
                      </button>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge rounded-pill <%= txn.type === 'credit' ? 'text-bg-success' : 'text-bg-danger' %>">
                      <%= txn.type %>
                    </span>
                  </td>
                  <td class="<%= txn.type === 'credit' ? 'text-credit' : 'text-debit' %>">
                    <%= txn.type === 'credit' ? '+' : '-' %> ₹<%= txn.amount.toLocaleString('en-IN') %>
                  </td>
                  <td>
                    <% if (txn.tournament) { %>
                      <i class="fas fa-trophy me-2 text-warning"></i><span><%= txn.tournament.name %></span>
                    <% } else if (txn.type === 'credit') { %>
                      <i class="fas fa-plus-circle me-2 text-success"></i><span>Deposit</span>
                    <% } else { %>
                      <i class="fas fa-money-bill-wave me-2 text-info"></i><span>Withdrawal</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="badge rounded-pill <%= txn.status === 'done' ? 'text-bg-success' : 'text-bg-warning' %>">
                      <%= txn.status %>
                    </span>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
  <%- include("../includes/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            // Optional: Show a temporary tooltip or feedback
            alert('Copied to clipboard!');
        }).catch(err => {
            console.error('Failed to copy text: ', err);
        });
    }
  </script>
</body>
</html>