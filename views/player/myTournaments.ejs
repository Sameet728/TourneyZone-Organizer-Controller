<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Tournaments | SVx Arena</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
          },
          colors: {
            brand: {
              50: '#f5f3ff',
              100: '#ede9fe',
              500: '#8b5cf6',
              600: '#7c3aed',
              900: '#4c1d95',
            }
          },
          animation: {
            'float': 'float 3s ease-in-out infinite',
            'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-5px)' },
            }
          }
        }
      }
    }
  </script>

  <style>
    /* Custom Scrollbar */
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #f5f3ff; }
    ::-webkit-scrollbar-thumb { background: #c4b5fd; border-radius: 10px; }

    /* Tab Animation */
    .tab-content { display: none; animation: fadeIn 0.4s ease-out forwards; }
    .tab-content.active { display: block; }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob { animation: blob 7s infinite; }
    .animation-delay-2000 { animation-delay: 2s; }
  </style>
</head>

<body class="bg-slate-50 text-slate-800 font-sans min-h-screen flex flex-col relative overflow-x-hidden">

  <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
  </div>

  <div class="relative z-50">
    <%- include("../includes/navbar") %>
  </div>

  <div class="container mx-auto px-4 py-10 flex-grow">

    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-white rounded-2xl mb-4 text-3xl shadow-sm animate-float">
        <i class="fas fa-gamepad text-brand-500"></i>
      </div>
      <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-2">My Tournaments</h1>
      <p class="text-slate-500 font-medium">Track your battles, check schedules, and claim glory.</p>
    </div>

    <div class="flex justify-center mb-10">
      <div class="bg-white p-1.5 rounded-2xl shadow-sm border border-slate-200 inline-flex relative z-10">
        <button onclick="switchTab('upcoming')" id="tab-upcoming"
          class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-300 bg-brand-600 text-white shadow-md transform hover:scale-105">
          <i class="fas fa-clock mr-2"></i> Upcoming
        </button>
        <button onclick="switchTab('ongoing')" id="tab-ongoing"
          class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold text-slate-500 hover:text-brand-600 transition-all duration-300 hover:bg-slate-50">
          <i class="fas fa-play-circle mr-2"></i> Ongoing
        </button>
        <button onclick="switchTab('completed')" id="tab-completed"
          class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold text-slate-500 hover:text-brand-600 transition-all duration-300 hover:bg-slate-50">
          <i class="fas fa-trophy mr-2"></i> Completed
        </button>
      </div>
    </div>

    <div id="content-upcoming" class="tab-content active">
      <% const upcoming = tournaments.filter(t => t.status === 'upcoming'); %>

      <% if (!upcoming.length) { %>
        <div class="text-center py-16 bg-white/60 backdrop-blur-xl border border-white/60 rounded-3xl shadow-sm max-w-2xl mx-auto">
          <div class="text-6xl mb-4 animate-float">üò¥</div>
          <h3 class="text-xl font-bold text-slate-900 mb-2">No Upcoming Matches</h3>
          <p class="text-slate-500 mb-6">You haven't joined any future tournaments yet.</p>
          <a href="/player/tournaments" class="px-6 py-3 bg-brand-600 text-white font-bold rounded-xl hover:bg-brand-700 transition-all shadow-lg hover:shadow-brand-500/30">
            Find Tournaments üöÄ
          </a>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% upcoming.forEach(t => { %>
            <div class="group bg-white border border-slate-100 rounded-3xl p-6 shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300">
              
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 bg-brand-50 text-brand-600 rounded-lg text-xs font-bold uppercase tracking-wider border border-brand-100">
                  <%= t.game %>
                </span>
                <span class="text-lg font-extrabold text-slate-900">‚Çπ<%= t.entryFee %></span>
              </div>

              <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-brand-600 transition-colors line-clamp-1"><%= t.name %></h3>

              <div class="flex items-center text-xs font-bold text-slate-400 uppercase tracking-wider mb-5">
                <i class="far fa-calendar-alt mr-2 text-brand-400"></i>
                <%= new Date(t.tournamentDate).toDateString() %>
              </div>

              <div class="mb-5">
                <% 
                  const teamCount = t.teams ? t.teams.length : 0;
                  const limit = t.teamLimit || 1;
                  const percent = Math.round((teamCount / limit) * 100); 
                %>
                <div class="flex justify-between text-xs font-bold text-slate-500 mb-1.5">
                  <span>Slots Filled</span>
                  <span class="text-brand-600"><%= percent %>%</span>
                </div>
                <div class="w-full bg-slate-100 h-2 rounded-full overflow-hidden">
                  <div class="h-full bg-gradient-to-r from-brand-400 to-brand-600 rounded-full transition-all duration-1000 ease-out" style="width:<%= percent %>%"></div>
                </div>
              </div>

              <a href="/player/tournaments/<%= t._id %>"
                class="block text-center py-3.5 bg-slate-900 text-white rounded-xl font-bold hover:bg-brand-600 transition-colors shadow-lg shadow-slate-200 hover:shadow-brand-500/30 group-hover:scale-[1.02]">
                View Details <i class="fas fa-arrow-right ml-1 text-xs opacity-70"></i>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <div id="content-ongoing" class="tab-content">
      <% const ongoing = tournaments.filter(t => t.status === 'ongoing'); %>

      <% if (!ongoing.length) { %>
        <div class="text-center py-16 bg-white/60 backdrop-blur-xl border border-white/60 rounded-3xl shadow-sm max-w-2xl mx-auto">
          <div class="text-6xl mb-4 grayscale opacity-50">üéÆ</div>
          <h3 class="text-xl font-bold text-slate-900 mb-2">No Active Games</h3>
          <p class="text-slate-500">You are not playing in any live tournaments right now.</p>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% ongoing.forEach(t => { %>
            <div class="relative bg-white border-2 border-green-400/30 rounded-3xl p-6 shadow-xl overflow-hidden group hover:-translate-y-1 transition-transform">
              <div class="absolute top-4 right-4 flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
              </div>

              <span class="text-green-600 bg-green-50 border border-green-100 px-3 py-1 rounded-lg text-xs font-bold uppercase tracking-wider mb-3 inline-block">
                ‚óè Live Now
              </span>
              
              <h3 class="text-xl font-bold text-slate-900 mb-1"><%= t.name %></h3>
              <p class="text-slate-500 text-sm mb-6"><%= t.game %></p>

              <div class="bg-green-50 rounded-xl p-4 mb-5 text-center border border-green-100">
                 <p class="text-green-800 text-xs font-bold uppercase tracking-wider">Tournament In Progress</p>
                 <p class="text-green-600 text-xs mt-1">Check bracket for your next match</p>
              </div>

              <a href="/player/tournaments/<%= t._id %>"
                class="block text-center py-3.5 bg-green-600 text-white rounded-xl font-bold hover:bg-green-700 transition-colors shadow-lg shadow-green-200">
                <i class="fas fa-tv mr-2"></i> Go to Match
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <div id="content-completed" class="tab-content">
      <% const completed = tournaments.filter(t => t.status === 'completed'); %>

      <% if (!completed.length) { %>
        <div class="text-center py-16 bg-white/60 backdrop-blur-xl border border-white/60 rounded-3xl shadow-sm max-w-2xl mx-auto">
          <div class="text-6xl mb-4 grayscale opacity-30">üèÜ</div>
          <h3 class="text-xl font-bold text-slate-900 mb-2">History Empty</h3>
          <p class="text-slate-500">Completed tournaments will appear here.</p>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% completed.forEach(t => { %>
            <div class="bg-slate-50 border border-slate-200 rounded-3xl p-6 hover:shadow-lg hover:bg-white transition-all duration-300 group">
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 bg-slate-200 text-slate-600 rounded-lg text-xs font-bold uppercase tracking-wider">
                  Ended
                </span>
                <span class="text-xs font-bold text-slate-400 flex items-center">
                  <i class="far fa-calendar-check mr-1.5"></i>
                  <%= new Date(t.tournamentDate).toDateString() %>
                </span>
              </div>

              <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-brand-600 transition-colors"><%= t.name %></h3>
              <p class="text-slate-500 text-sm mb-6"><%= t.game %></p>

              <% if (t.result && t.result.firstPlace) { %>
                <div class="bg-white border border-slate-100 rounded-xl p-3 mb-5 flex items-center gap-3 shadow-sm">
                  <div class="text-2xl">üëë</div>
                  <div class="overflow-hidden">
                    <p class="text-[10px] font-bold text-slate-400 uppercase">Winner</p>
                    <p class="text-sm font-bold text-slate-900 truncate"><%= t.result.firstPlace.teamName %></p>
                  </div>
                </div>
              <% } %>

              <a href="/player/results/<%= t._id %>"
                class="block text-center py-3.5 bg-white border-2 border-slate-200 text-slate-600 rounded-xl font-bold hover:border-slate-300 hover:bg-slate-50 transition-colors">
                See Results üèÖ
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

  </div>

  <div class="mt-auto">
    <%- include("../includes/footer") %>
  </div>

  <script>
    function switchTab(tab) {
      // 1. Hide all contents
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      
      // 2. Reset buttons
      document.querySelectorAll('.tab-btn').forEach(b => {
        b.className = "tab-btn px-6 py-2.5 rounded-xl text-sm font-bold text-slate-500 hover:text-brand-600 transition-all duration-300 hover:bg-slate-50";
      });

      // 3. Show active content
      document.getElementById('content-' + tab).classList.add('active');
      
      // 4. Highlight active button
      const activeBtn = document.getElementById('tab-' + tab);
      activeBtn.className = "tab-btn px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-300 bg-brand-600 text-white shadow-md transform hover:scale-105";
    }
  </script>

</body>

</html>
