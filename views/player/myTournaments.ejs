<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Tournaments | TourneyZone</title>
  
  <script src="https://cdn.tailwindcss.com"></script>
  
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
          },
          colors: {
            brand: {
              500: '#3b82f6',
              600: '#2563eb',
              900: '#1e3a8a',
            }
          }
        }
      }
    }
  </script>

  <style>
    /* Tab Animation */
    .tab-content {
      display: none;
      animation: fadeIn 0.3s ease-in-out;
    }
    .tab-content.active {
      display: block;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Background Animation */
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob { animation: blob 7s infinite; }
    .animation-delay-2000 { animation-delay: 2s; }
  </style>
</head>

<body class="bg-slate-50 text-slate-800 font-sans min-h-screen flex flex-col relative">

  <div class="fixed top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
  </div>

  <div class="relative z-50">
    <%- include("../includes/navbar") %>
  </div>

  <div class="container mx-auto px-4 py-8 lg:py-12 flex-grow">
    
    <div class="text-center mb-10">
      <h1 class="text-3xl md:text-4xl font-extrabold text-slate-900 tracking-tight mb-2">
        My Tournaments <span class="text-brand-600">ðŸŽ®</span>
      </h1>
      <p class="text-slate-500 font-medium max-w-lg mx-auto">Track your upcoming battles, monitor live matches, and review your competitive history.</p>
    </div>

    <div class="flex justify-center mb-8">
      <div class="bg-white p-1.5 rounded-2xl shadow-sm border border-slate-200 inline-flex">
        <button onclick="switchTab('upcoming')" id="tab-upcoming" class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold transition-all duration-200 bg-brand-600 text-white shadow-md">
          <i class="fas fa-clock mr-2"></i> Upcoming
        </button>
        <button onclick="switchTab('ongoing')" id="tab-ongoing" class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold text-slate-500 hover:text-brand-600 transition-all duration-200">
          <i class="fas fa-play-circle mr-2"></i> Ongoing
        </button>
        <button onclick="switchTab('completed')" id="tab-completed" class="tab-btn px-6 py-2.5 rounded-xl text-sm font-bold text-slate-500 hover:text-brand-600 transition-all duration-200">
          <i class="fas fa-trophy mr-2"></i> Completed
        </button>
      </div>
    </div>

    <div class="min-h-[400px]">
      
      <div id="content-upcoming" class="tab-content active">
        <% const upcoming = tournaments.filter(t => t.status === 'upcoming'); %>
        
        <% if (upcoming.length === 0) { %>
          <div class="bg-white/60 backdrop-blur-xl border border-white/20 rounded-3xl p-12 text-center shadow-lg max-w-2xl mx-auto">
            <div class="bg-slate-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 text-slate-400 text-3xl">
              <i class="fas fa-calendar-times"></i>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-2">No Upcoming Matches</h3>
            <p class="text-slate-500 mb-6">You haven't registered for any future tournaments yet.</p>
            <a href="/tournaments" class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 text-white font-bold rounded-xl hover:bg-brand-700 transition-all shadow-lg hover:shadow-brand-500/30">
              <i class="fas fa-search mr-2"></i> Browse Tournaments
            </a>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% upcoming.forEach(t => { %>
              <div class="group bg-white border border-slate-100 rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class="flex justify-between items-start mb-4">
                  <span class="px-3 py-1 bg-indigo-50 text-indigo-600 rounded-lg text-xs font-bold uppercase tracking-wider">
                    <%= t.game %>
                  </span>
                  <span class="text-slate-900 font-extrabold text-lg">â‚¹<%= t.entryFee %></span>
                </div>
                
                <h3 class="text-xl font-bold text-slate-900 mb-2 line-clamp-1"><%= t.name %></h3>
                <p class="text-slate-500 text-sm mb-4 line-clamp-2"><%= t.description || "No description." %></p>
                
                <div class="mb-4">
                  <div class="flex justify-between text-xs font-bold text-slate-500 mb-1">
                    <span>Teams Joined</span>
                    <span><%= Math.round((t.teams.length / t.teamLimit) * 100) %>%</span>
                  </div>
                  <div class="w-full bg-slate-100 rounded-full h-2.5 overflow-hidden">
                    <div class="bg-brand-500 h-2.5 rounded-full transition-all duration-1000" style="width: <%= Math.round((t.teams.length / t.teamLimit) * 100) %>%"></div>
                  </div>
                  <div class="text-xs text-slate-400 mt-1 text-right"><%= t.teams.length %> / <%= t.teamLimit %> Slots</div>
                </div>

                <div class="flex items-center gap-4 text-xs text-slate-500 font-medium bg-slate-50 p-3 rounded-xl mb-4">
                  <div class="flex items-center"><i class="far fa-calendar-alt mr-1.5 text-brand-500"></i> <%= t.startDate.toDateString() %></div>
                  <div class="flex items-center"><i class="far fa-clock mr-1.5 text-brand-500"></i> <%= t.endDate.toDateString() %></div>
                </div>

                <a href="/tournament/<%= t._id %>" class="block w-full text-center py-3 rounded-xl bg-slate-900 text-white font-bold hover:bg-brand-600 transition-colors">
                  View Details
                </a>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>

      <div id="content-ongoing" class="tab-content">
        <% const ongoing = tournaments.filter(t => t.status === 'ongoing'); %>
        
        <% if (ongoing.length === 0) { %>
          <div class="bg-white/60 backdrop-blur-xl border border-white/20 rounded-3xl p-12 text-center shadow-lg max-w-2xl mx-auto">
            <div class="bg-slate-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 text-slate-400 text-3xl">
              <i class="fas fa-video-slash"></i>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-2">No Active Tournaments</h3>
            <p class="text-slate-500 mb-6">You are not playing in any live tournaments right now.</p>
            <a href="/tournaments" class="inline-flex items-center justify-center px-6 py-3 bg-brand-600 text-white font-bold rounded-xl hover:bg-brand-700 transition-all shadow-lg hover:shadow-brand-500/30">
              <i class="fas fa-search mr-2"></i> Find Matches
            </a>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% ongoing.forEach(t => { %>
              <div class="relative bg-white border-2 border-green-400/30 rounded-2xl p-6 shadow-lg">
                <div class="absolute -top-3 -right-3">
                  <span class="relative flex h-6 w-6">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-6 w-6 bg-green-500 border-2 border-white"></span>
                  </span>
                </div>

                <div class="flex justify-between items-start mb-4">
                  <span class="px-3 py-1 bg-green-50 text-green-600 rounded-lg text-xs font-bold uppercase tracking-wider flex items-center">
                    <i class="fas fa-circle text-[8px] mr-2 animate-pulse"></i> LIVE NOW
                  </span>
                  <span class="text-slate-900 font-extrabold text-lg">â‚¹<%= t.entryFee %></span>
                </div>
                
                <h3 class="text-xl font-bold text-slate-900 mb-2"><%= t.name %></h3>
                <p class="text-slate-500 text-sm mb-4"><%= t.game %></p>

                <div class="bg-green-50 rounded-xl p-4 mb-4 text-center">
                   <p class="text-green-800 text-sm font-bold">Tournament in Progress</p>
                   <p class="text-green-600 text-xs mt-1">Check bracket for your next match</p>
                </div>

                <a href="/tournament/<%= t._id %>" class="block w-full text-center py-3 rounded-xl bg-green-600 text-white font-bold hover:bg-green-700 transition-colors shadow-lg shadow-green-200">
                  <i class="fas fa-tv mr-2"></i> View Bracket
                </a>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>

      <div id="content-completed" class="tab-content">
        <% const completed = tournaments.filter(t => t.status === 'completed'); %>
        
        <% if (completed.length === 0) { %>
           <div class="bg-white/60 backdrop-blur-xl border border-white/20 rounded-3xl p-12 text-center shadow-lg max-w-2xl mx-auto">
            <div class="bg-slate-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 text-slate-400 text-3xl">
              <i class="fas fa-history"></i>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-2">History is Empty</h3>
            <p class="text-slate-500">Completed tournaments will appear here.</p>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% completed.forEach(t => { %>
              <div class="bg-slate-50 border border-slate-200 rounded-2xl p-6 opacity-90 hover:opacity-100 hover:shadow-lg transition-all">
                <div class="flex justify-between items-start mb-4">
                  <span class="px-3 py-1 bg-slate-200 text-slate-600 rounded-lg text-xs font-bold uppercase tracking-wider">
                    Ended
                  </span>
                  <span class="text-slate-500 font-bold text-sm"><%= t.endDate.toDateString() %></span>
                </div>
                
                <h3 class="text-xl font-bold text-slate-900 mb-2"><%= t.name %></h3>
                <p class="text-slate-500 text-sm mb-4"><%= t.game %></p>
                
                <% if (t.result) { %>
                  <div class="bg-white rounded-xl p-4 mb-4 border border-slate-100 shadow-sm">
                    <h6 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2">Podium</h6>
                    <div class="flex items-center justify-between mb-1">
                      <span class="text-sm font-bold text-slate-700 flex items-center">
                        <i class="fas fa-crown text-yellow-500 mr-2"></i> 1st
                      </span>
                      <span class="text-sm font-bold text-slate-900"><%= t.result.firstPlace?.teamName || "N/A" %></span>
                    </div>
                    <% if (t.result.secondPlace) { %>
                    <div class="flex items-center justify-between">
                      <span class="text-sm font-bold text-slate-700 flex items-center">
                        <i class="fas fa-medal text-slate-400 mr-2"></i> 2nd
                      </span>
                      <span class="text-sm font-bold text-slate-900"><%= t.result.secondPlace.teamName %></span>
                    </div>
                    <% } %>
                  </div>
                <% } %>

                <a href="/player/results/<%= t._id %>" class="block w-full text-center py-3 rounded-xl border-2 border-slate-200 text-slate-600 font-bold hover:bg-slate-200 transition-colors">
                  See Results
                </a>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>

    </div>
  </div>

  <div class="mt-auto">
    <%- include("../includes/footer") %>
  </div>

  <script>
    function switchTab(tabName) {
      // 1. Hide all tab contents
      const contents = document.querySelectorAll('.tab-content');
      contents.forEach(content => content.classList.remove('active'));

      // 2. Reset all button styles
      const buttons = document.querySelectorAll('.tab-btn');
      buttons.forEach(btn => {
        btn.classList.remove('bg-brand-600', 'text-white', 'shadow-md');
        btn.classList.add('text-slate-500');
      });

      // 3. Show selected content
      document.getElementById('content-' + tabName).classList.add('active');

      // 4. Style selected button
      const activeBtn = document.getElementById('tab-' + tabName);
      activeBtn.classList.remove('text-slate-500');
      activeBtn.classList.add('bg-brand-600', 'text-white', 'shadow-md');
    }
  </script>

</body>
</html>