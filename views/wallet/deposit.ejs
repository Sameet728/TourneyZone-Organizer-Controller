<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deposit to Wallet | BattleZone</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    :root {
      --primary: #6c5ce7;
      --secondary: #a29bfe;
      --success: #00b894;
      --dark: #1a1a2e;
      --light: #f5f6fa;
    }
    
    body {
      background-color: var(--dark);
      color: var(--light);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .deposit-container {
      max-width: 600px;
      margin: 2rem auto;
      padding: 2rem;
      background: rgba(26, 26, 46, 0.8);
      border-radius: 15px;
      border: 1px solid var(--primary);
      box-shadow: 0 10px 30px rgba(108, 92, 231, 0.2);
    }
    
    .payment-card {
      background: rgba(44, 44, 84, 0.5);
      border-radius: 10px;
      padding: 1.5rem;
      margin-top: 1.5rem;
      border: 1px solid var(--secondary);
    }
    
    .btn-primary {
      background: linear-gradient(to right, var(--primary), #8c7ae6);
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
    }
    
    .btn-success {
      background: linear-gradient(to right, var(--success), #55efc4);
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
    }
    
    .qr-container {
      text-align: center;
      margin: 1.5rem 0;
    }
    
    .qr-code {
      width: 200px;
      height: 200px;
      border: 1px solid var(--secondary);
      border-radius: 10px;
      padding: 10px;
      background: white;
    }
    
    .upi-id {
      font-family: monospace;
      font-size: 1.2rem;
      background: rgba(255,255,255,0.1);
      padding: 0.5rem 1rem;
      border-radius: 8px;
      display: inline-block;
      margin: 0.5rem 0;
    }
    
    .copy-btn {
      background: none;
      border: none;
      color: var(--secondary);
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="deposit-container">
      <h2 class="text-center mb-4"><i class="fas fa-wallet me-2"></i>Deposit to Wallet</h2>
      
      <form id="depositForm" method="POST" action="/wallet/deposit">
        <div class="mb-3">
          <label for="amount" class="form-label">Enter Amount (₹)</label>
          <div class="input-group">
            <span class="input-group-text">₹</span>
            <input type="number" class="form-control" name="amount" id="amount" min="1" required>
          </div>
        </div>
        
        <div class="text-center">
          <button type="button" class="btn btn-primary" onclick="generateUPILink()">
            <i class="fas fa-qrcode me-2"></i>Generate Payment Link
          </button>
        </div>
        
        <div id="upiSection" class="payment-card" style="display: none;">
          <h4 class="text-center mb-3">Complete Payment</h4>
          
          <div class="qr-container">
            <img src="" id="qr" class="qr-code" alt="UPI QR Code">
            <p class="mt-2">Scan QR Code to pay</p>
          </div>
          
          <div class="text-center mb-3">
            <div class="upi-id" id="upiIdDisplay">9284476058@ybl</div>
            <button type="button" class="copy-btn" onclick="copyUPI()">
              <i class="fas fa-copy me-1"></i>Copy UPI ID
            </button>
          </div>
          
          <div class="text-center mb-3">
            <a href="#" id="upiLink" class="btn btn-success">
              <i class="fas fa-mobile-alt me-2"></i>Pay Now
            </a>
          </div>
          
          <div class="mb-3">
            <label for="utr" class="form-label">Enter UTR/Transaction ID</label>
            <input type="text" class="form-control" name="utr" id="utr" required>
          </div>
          
          <div class="text-center">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-check-circle me-2"></i>Confirm Payment
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    function generateUPILink() {
      const amount = parseInt(document.getElementById('amount').value);
      if (!amount || amount <= 0) {
        alert("Please enter a valid amount");
        return;
      }

      // Show payment section
      document.getElementById('upiSection').style.display = 'block';

      // Generate UPI payment link
      const upiLink = `upi://pay?pa=9284476058@ybl&pn=BattleZone&am=${amount}&cu=INR`;
      
      // Update QR code
      document.getElementById('qr').src = 
        `https://api.qrserver.com/v1/create-qr-code/?data=${encodeURIComponent(upiLink)}&size=200x200`;
      
      // Update Pay Now button
      document.getElementById('upiLink').href = upiLink;
    }

    function copyUPI() {
      navigator.clipboard.writeText("9284476058@ybl").then(() => {
        alert("UPI ID copied to clipboard!");
      }).catch(err => {
        console.error("Failed to copy UPI ID:", err);
      });
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>